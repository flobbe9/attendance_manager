{
  "cli": {
    "version": ">= 16.3.3",
    "appVersionSource": "remote",
    "requireCommit": true
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal"
    },
    "preview": {
      "distribution": "internal"
    },
    "dev": {
      "autoIncrement": true
    },
    "staging": {
      "simulator": false,
      "autoIncrement": true
    },
    "production": {
      "autoIncrement": true
    }
  },
  "submit": {
    "dev": {},
    "staging": {},
    "production": {}
  }
}
